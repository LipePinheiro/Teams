@model IEnumerable<Teams.Models.InfoTeams>


@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">Teams</h2>

@using (Html.BeginForm("Index", "InfoTeams", FormMethod.Get))
{
    <h4>Search By</h4> 
    @Html.RadioButton("searchBy", "NameTeam", true) <text>Team Name</text> <br />
    @Html.RadioButton("searchBy", "CoachTeam") <text>Coach Name</text>
    <br />
    @Html.TextBox("equipas")<input type="submit" value="Search" class="btn btn-default btn-sm" />
}

<table class="table">
    <thead>
        <tr>
            <th>
                Team Id
            </th>
            <th>
                Team Name
            </th>
            <th>Coach Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="2">
                    Nothing to show!
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Team_Id)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Team_Id">@Html.DisplayFor(modelItem => item.Team_name)</a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coach_name)  
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Team_Id"><img src="~/images/edit.png" /></a>
                    <a asp-action="Delete" asp-route-id="@item.Team_Id"><img src="~/images/delete.png" /></a>

                </td>
            </tr>
            }
        }
    </tbody>
</table>




